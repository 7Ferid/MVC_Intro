@model  Slider

<div class="container"> 
    <div class="row">
      
  
<form method="post" asp-action="Create" asp-controller="Slider" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Logo">Logo</label>
        <input asp-for="Logo" class="form-control" id="Logo"  placeholder="LogoUrl">
        <span class="text-danger" asp-validation-for="LogoUrl"></span>
       
    </div>

    <div class="form-group">
        <label for="Title">Title</label>
        <input asp-for="Title" class="form-control" id="title" placeholder="Title">
                <span class="text-danger" asp-validation-for="Title"></span>


    </div>

 <div class="form-group">
        <label for="Description">Description</label>
        <input asp-for="Description" class="form-control" id="description" placeholder="Description">
                <span class="text-danger" asp-validation-for="Description"></span>

    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
            <button asp-action="Index" class="btn btn-secondary" >Cancel</button>
</form>
    </div>
</div>